{
  "name": "discord-ark-bot",
  "version": "1.0.0",
  "description": "discord bot to work with forbidden servers",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "set-up-db": "psql -f api/db/sql/setup.sql",
    "migrate-db": "node-pg-migrate up -m ./api/db/migrations",
    "set-up-and-migrate": "npm run set-up-db && npm run migrate-db",
    "teardown-db": "psql -f api/db/sql/teardown.sql",
    "migrate:prod": "DATABASE_URL=$(heroku config:get DATABASE_URL -a forbidden-planet) npm run migrate-db ",
    "start": "node API/express/src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Shread1234/forbidden-planet-discord-bot.git"
  },
  "author": "Jamie Main",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Shread1234/forbidden-planet-discord-bot/issues"
  },
  "homepage": "https://github.com/Shread1234/forbidden-planet-discord-bot#readme",
  "dependencies": {
    "discord.js": "^12.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "node-pg-migrate": "^5.8.1",
    "pg": "^8.4.1",
    "rcon-client": "^4.2.2"
  }
}
